<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".RegisterActivity" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="220dp" android:layout_width="220dp" app:srcCompat="@drawable/logo" android:layout_marginRight="100dp" android:layout_marginEnd="10dp" android:layout_marginTop="20dp" android:layout_marginLeft="100dp" android:layout_marginStart="100dp" android:id="@+id/imageView"/>

    <EditText android:layout_height="wrap_content" android:layout_width="380dp" android:layout_marginTop="20dp" android:id="@+id/email" android:textSize="18sp" android:inputType="textEmailAddress" android:hint="E-mail" android:ems="10" android:layout_gravity="center"/>

    <EditText android:layout_height="wrap_content" android:layout_width="380dp" android:layout_marginTop="25dp" android:id="@+id/nickname" android:textSize="18sp" android:inputType="text" android:hint="닉네임" android:ems="10" android:layout_gravity="center"/>

    <EditText android:layout_height="wrap_content" android:layout_width="380dp" android:layout_marginTop="25dp" android:id="@+id/password" android:textSize="18sp" android:inputType="textPassword" android:hint="비밀번호" android:ems="10" android:layout_gravity="center"/>

    <EditText android:layout_height="wrap_content" android:layout_width="380dp" android:layout_marginTop="25dp" android:id="@+id/confirm" android:textSize="18sp" android:inputType="textPassword" android:hint="비밀번호 확인" android:ems="10" android:layout_gravity="center"/>

    <Button android:layout_height="50dp" android:layout_width="150dp" android:layout_marginTop="20dp" android:id="@+id/register" android:textSize="18sp" android:layout_gravity="center" app:backgroundTint="#424242" android:backgroundTint="#424242" android:textStyle="normal" android:textColor="#ffffff" android:text="Sign Up"/>

</LinearLayout>