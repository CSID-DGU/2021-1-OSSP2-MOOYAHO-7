<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!-- upside toolbar start -->

    <LinearLayout android:orientation="horizontal" android:layout_height="91dp" android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="82dp"
                android:layout_height="69dp"
                android:layout_gravity="fill|fill_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mapbutton1"
                android:layout_width="42dp"
                android:layout_height="51dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                app:srcCompat="@drawable/baseline_map_black_48dp"
                app:tint="#424242" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Map"
                android:textColor="@color/black"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.863"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mapbutton1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <TextView android:layout_height="1dp" android:layout_width="match_parent" android:id="@+id/line2" android:text="TextView" android:background="#70000000"/>

    <!-- upside toolbar finish -->

    <!-- requests -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/ChatList"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:background="@drawable/text_round"
                android:text="test"
                android:textAllCaps="true"
                android:textSize="14sp"
                app:backgroundTint="@color/logo" />

            <com.example.mooyaho.FoldingCell
                android:id="@+id/folding_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <FrameLayout
                    android:id="@+id/cell_content_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@drawable/text_round"
                        android:gravity="center"
                        android:text="출발 위치, 도착 위치, 물건의 무게, 가격, 수고비등 상세 정보"
                        android:textColor="@color/black" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/cell_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/text_round"
                        android:gravity="center"
                        android:text="요청 물건, 물건 이름, 물건 사진 정보"
                        android:textColor="@color/black" />

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/frame_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="-1dp">

                    <Button
                        android:id="@+id/toggle_btn"
                        android:layout_width="62dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_margin="5dp"
                        android:background="@drawable/text_round"
                        android:text="More"
                        android:textSize="9sp"
                        app:backgroundTint="@color/gray" />

                </FrameLayout>


            </com.example.mooyaho.FoldingCell>

            <com.example.mooyaho.FoldingCell
                android:id="@+id/folding_cell2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <FrameLayout
                    android:id="@+id/cell_content_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@drawable/text_round"
                        android:gravity="center"
                        android:text="Content view" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/cell_title_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/text_round"
                        android:gravity="center"
                        android:text="Title view" />


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="52dp">

                    <Button
                        android:id="@+id/toggle_btn2"
                        android:layout_width="62dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_margin="5dp"
                        android:background="@drawable/text_round"
                        android:text="more"
                        android:textSize="9sp"
                        app:backgroundTint="@color/gray" />

                </FrameLayout>

            </com.example.mooyaho.FoldingCell>

            <com.example.mooyaho.FoldingCell
                android:id="@+id/folding_cell3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <FrameLayout
                    android:id="@+id/cell_content_view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@drawable/text_round"
                        android:gravity="center"
                        android:text="Content view" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/cell_title_view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/text_round"
                        android:gravity="center"
                        android:text="Title view" />


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="52dp">

                    <Button
                        android:id="@+id/toggle_btn3"
                        android:layout_width="62dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_margin="5dp"
                        android:background="@drawable/text_round"
                        android:text="more"
                        android:textSize="9sp"
                        app:backgroundTint="@color/gray" />

                </FrameLayout>

            </com.example.mooyaho.FoldingCell>

            <com.example.mooyaho.FoldingCell
                android:id="@+id/folding_cell4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <FrameLayout
                    android:id="@+id/cell_content_view4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@drawable/text_round"
                        android:gravity="center"
                        android:text="Content view" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/cell_title_view4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/text_round"
                        android:gravity="center"
                        android:text="Title view" />


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="52dp">

                    <Button
                        android:id="@+id/toggle_btn4"
                        android:layout_width="62dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_margin="5dp"
                        android:background="@drawable/text_round"
                        android:text="more"
                        android:textSize="9sp"
                        app:backgroundTint="@color/gray" />

                </FrameLayout>

            </com.example.mooyaho.FoldingCell>
        </LinearLayout>
    </ScrollView>

    <!-- downside toolbar start-->
    <TextView android:layout_height="1dp" android:layout_width="match_parent" android:id="@+id/line" android:text="TextView" android:background="#70000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="#FFFFFF"
                android:tint="#424242"
                app:srcCompat="@drawable/baseline_home_black_24" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="홈"
                android:textAlignment="center"
                android:textColor="@color/logo"
                android:textSize="10dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mapbutton1" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="#FFFFFF"
                android:tint="#424242"
                app:srcCompat="@drawable/baseline_delivery_dining_black_36dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="요청"
                android:textAlignment="center"
                android:textColor="@color/logo"
                android:textSize="10dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mapbutton1" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/chatting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="#FFFFFF"
                android:tint="#424242"
                app:srcCompat="@drawable/baseline_question_answer_black_36dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="채팅"
                android:textAlignment="center"
                android:textColor="@color/logo"
                android:textSize="10dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mapbutton1" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/mypage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:background="#FFFFFF"
                android:tint="#424242"
                app:srcCompat="@drawable/baseline_account_circle_black_36dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="프로필"
                android:textAlignment="center"
                android:textColor="@color/logo"
                android:textSize="10dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mapbutton1" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
    <!-- downside toolbar finish-->

</LinearLayout>