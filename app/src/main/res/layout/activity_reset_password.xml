<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:orientation="vertical" tools:context=".ResetPasswordActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="220dp" android:layout_width="220dp" app:srcCompat="@drawable/logo" android:layout_marginRight="100dp" android:layout_marginEnd="10dp" android:layout_marginTop="20dp" android:layout_marginLeft="100dp" android:layout_marginStart="100dp" android:id="@+id/imageView"/>

    <EditText android:layout_height="wrap_content" android:layout_width="380dp" android:layout_marginTop="60dp" android:id="@+id/email" android:textSize="20sp" android:inputType="textEmailAddress" android:hint="E-mail 로 찾기" android:ems="10" android:layout_gravity="center"/>

    <Button android:layout_height="50dp" android:layout_width="200dp" android:layout_marginTop="24dp" android:id="@+id/reset" android:textSize="18sp" android:layout_gravity="center" android:textStyle="normal" android:textColor="#ffffff" android:text="비밀번호 재설정" android:backgroundTint="#424242"/>

</LinearLayout>